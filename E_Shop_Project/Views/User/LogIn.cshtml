@model E_Shop_Project.Models.User
@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>LogIn</h2>

@using (Html.BeginForm("Home", "User"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.UserName)
        @Html.TextBoxFor(c => c.UserName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Password)
        @Html.TextBoxFor(c => c.Password, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(c => c.ErrorloginAtempt)
    @Html.HiddenFor(c=>c.Name)
    <button type="submit" class="btn btn-primary">Login</button>

}