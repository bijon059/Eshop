@model E_Shop_Project.ViewModels.ProductFormViewModel

@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddProduct</h2>

@using (Html.BeginForm("Save", "Product"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Product.Name)
        @Html.TextBoxFor(c => c.Product.Name, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(c => c.Product.Quantity)
        @Html.TextBoxFor(c => c.Product.Quantity, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Product.Price)
        @Html.TextBoxFor(c => c.Product.Price, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Product.Color)
        @Html.TextBoxFor(c => c.Product.Color, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Product.ProductCategoryId)
        @Html.DropDownListFor(c => c.Product.ProductCategoryId, new SelectList(Model.ProductCategories,"Id","Name"), new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Product.Description)
        @Html.TextAreaFor(c=>c.Product.Description,new { @class = "form-control"})
    </div>


    @*<div class="form-group">
        @Html.LabelFor(c => c.Product.ProductCategoryId)
        @Html.DropDownListFor(c => c.Product.ProductCategoryId, new SelectList(Model.ProductCategories, "Id", "Name"), "Select Product Type", new { @class = "form-control" })
    </div>*@
    
    @Html.HiddenFor(c => c.Name)

    <button type="submit" class="btn btn-primary">Save</button>
}

